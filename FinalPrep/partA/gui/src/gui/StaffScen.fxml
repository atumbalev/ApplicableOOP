<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.StaffSceneController">
   <children>
      <GridPane layoutX="2.0" prefHeight="400.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Slider fx:id="sldrRange" prefHeight="16.0" prefWidth="269.0" showTickLabels="true" showTickMarks="true" GridPane.columnIndex="1" />
            <Label text="Name:" GridPane.rowIndex="1" />
            <Label text="Works at:" GridPane.rowIndex="2" />
            <ComboBox fx:id="cboSelectStaff" onAction="#cboSelectStaffOnAction" prefHeight="26.0" prefWidth="296.0" promptText="Select Staff Memeber" />
            <Label text="Hired at:" GridPane.rowIndex="3" />
            <Label text="Increase:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Salary:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label fx:id="lblName" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <Label fx:id="lblWorksAt" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <Label fx:id="lblHiredAt" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
            <Label fx:id="lblIncrease" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <Label fx:id="lblSalary" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
